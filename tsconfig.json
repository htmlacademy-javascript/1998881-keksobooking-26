{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "types": [
    "node",
    "webpack-env"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*"
  ],
  "files": [
    "./webpack-index.ts"
  ]
}
